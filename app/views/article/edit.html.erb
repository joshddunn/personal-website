<h3>Add Screenshots</h3>
<%= form_for @screenshot, as: :screenshot, url: screenshots_path, remote: true do |f| %>
  <%= render 'shared/error_messages', object: @screenshot %>
  <%= f.hidden_field :article_id %>

  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image, accept: '.jpg,.png' %>
  </div>

  <div>
    <%= f.submit "Add Screenshot" %>
  </div>
<% end %>

<h3>Screenshot List</h3>
<%= text_field_tag "copy", "", class: "copy-link" %>
<div id="screenshots" class="screenshots">
  <% @article.screenshots.each do |screenshot| %>
    <%= render "screenshots/link", screenshot: screenshot %> 
  <% end %>
</div>

<h3>Article</h3>
<%= form_for @article, as: :article, url: article_path do |f| %>
  <%= render 'shared/error_messages', object: @article %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
  </div>

  <div>
    <%= f.label :published, "Publish On" %><br>
    <%= f.date_field :published, value: Date.today %>
  </div>

  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.submit "Publish Article" %>
  </div>
<% end %>
