<%= form_for @article, as: :article, url: article_index_path do |f| %>
  <%= render 'shared/error_messages', object: @article %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
  </div>

  <div>
    <%= f.label :published, "Publish On" %><br>
    <%= f.date_field :published, value: Date.today %>
  </div>

  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.submit "Publish Article" %>
  </div>
<% end %>
